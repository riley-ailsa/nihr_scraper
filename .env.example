# NIHR Scraper Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (for embeddings)
OPENAI_API_KEY=sk-...

# Pinecone API Key (for vector database)
PINECONE_API_KEY=pcsk_...
PINECONE_INDEX_NAME=ailsa-grants

# PostgreSQL Database URL
# For Docker Compose: Set POSTGRES_PASSWORD below and use default
# For external DB: Use full connection string
DATABASE_URL=postgresql://postgres:dev_password@localhost:5432/ailsa

# PostgreSQL Password (used by docker-compose)
POSTGRES_PASSWORD=dev_password
